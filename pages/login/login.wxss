/* pages/login/login.wxss */
.login-container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  position: relative;
}

/* 隐藏测试入口 */
.test-entry {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  opacity: 0.1;
}

.login-card {
  width: 86%;
  max-width: 600rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(20rpx);
}

.card-header {
  text-align: center;
  margin-bottom: 72rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(59,130,246,0.1));
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
  letter-spacing: 1rpx;
}

.input-group {
  margin: 60rpx 0;
}

.input-wrapper {
  position: relative;
  margin: 0 auto;
  width: 90%;
}

.input {
  width: 100%;
  height: 100rpx;
  padding: 0 32rpx;
  font-size: 34rpx;
  color: #1e293b;
  background: transparent;
  border: none;
  transition: all 0.3s ease;
}

.placeholder {
  color: #94a3b8;
  font-size: 32rpx;
}

.underline {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 4rpx;
  background: #3b82f6;
  transition: all 0.3s ease;
}

.input:focus + .underline {
  width: 100%;
}

.error-message {
  height: 48rpx;
  margin-top: 24rpx;
  color: #ef4444;
  font-size: 26rpx;
  text-align: center;
  opacity: 0;
  transition: all 0.3s ease;
}

.error .error-message {
  opacity: 1;
}

.remember-me {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 48rpx 0;
}

.remember-text {
  color: #64748b;
  font-size: 28rpx;
  margin-left: 16rpx;
}

checkbox {
  transform: scale(1);
  margin-right: 12rpx;
}

.card-footer {
  margin-top: 64rpx;
  display: flex;
  justify-content: center;
}

.login-btn {
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  font-size: 36rpx;
  border-radius: 50rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(59,130,246,0.2);
}

.btn-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(59,130,246,0.3);
}

/* 错误状态 */
.error .underline {
  background: #ef4444;
  width: 100%;
}