<!-- pages/login/login.wxml -->
<view class="login-container">
  <!-- 隐藏测试入口 -->
  <view class="test-entry" bindtap="handleQuickEntry"></view>

  <view class="login-card">
    <view class="card-header">
      <image class="logo" src="/images/任务7.png"></image>
      <text class="title">TaskFlow</text>
      <text class="subtitle">让任务管理更高效</text>
    </view>

    <view class="card-body">
      <view class="input-group {{errorMessage ? 'error' : ''}}">
        <view class="input-wrapper">
          <input 
            class="input"
            placeholder="输入用户ID"
            placeholder-class="placeholder"
            value="{{userId}}"
            bindinput="handleUserIdInput"
            maxlength="20"
          />
          <view class="underline"></view>
        </view>
        <text class="error-message">{{errorMessage}}</text>
      </view>

      <view class="remember-me">
        <checkbox checked="{{rememberMe}}" color="#3B82F6" bindtap="toggleRemember"></checkbox>
        <text class="remember-text">记住账号</text>
      </view>
    </view>

    <view class="card-footer">
      <button 
        class="login-btn" 
        bindtap="handleLogin"
        hover-class="btn-hover"
       style="height: 138rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx">立即登录</button>
    </view>
  </view>
</view>