/* pages/profile/profile.wxss */
.profile-container {
  padding: 32rpx;
  background: linear-gradient(150deg, #f8fafc 0%, #f0f4ff 100%);
  min-height: 100vh;
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #ffffff, #f8faff);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.08);
  border: 1rpx solid #e0e7ff;
  display: flex;
  align-items: center;
}

.avatar-btn {
  padding: 0;
  margin: 0;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: none;
  position: relative;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #f1f5f9;
  background-color: #fff;
}

.user-info {
  flex: 1;
  margin-left: 32rpx;
}

.nickname-input {
  font-size: 36rpx;
  color: #1e293b;
  font-weight: 600;
  padding: 12rpx 0;
  width: 100%;
  border-bottom: 2rpx solid #e2e8f0;
  line-height: 1.4;
}

.nickname-input::placeholder {
  color: #94a3b8;
}

.user-id {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 16rpx;
  display: block;
}

/* 功能卡片 */
.card {
  background: linear-gradient(145deg, #ffffff, #fbfdff);
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 41, 59, 0.04);
  border: 1rpx solid #e0e7ff;
}

/* 菜单项 */
.menu-item {
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  position: relative;
}

.menu-left {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.menu-text {
  font-size: 30rpx;
  color: #1e293b;
  margin-left: 24rpx;
  font-weight: 500;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  filter: hue-rotate(20deg);
}

/* 分隔线 */
.menu-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent 10%, #e0e7ff 50%, transparent 90%);
  margin: 0 32rpx;
}

/* 开关控件 */
.notify-switch {
  transform: scale(0.95);
  filter: drop-shadow(0 2rpx 4rpx rgba(59, 130, 246, 0.2));
}

/* 箭头 */
.arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
  filter: invert(48%) sepia(92%) saturate(1512%) hue-rotate(202deg);
}

/* 系统信息 */
.sys-info {
  background: linear-gradient(145deg, #ffffff, #f8faff);
  padding: 0 32rpx;
}

.info-header {
  display: flex;
  align-items: center;
  height: 96rpx;
  border-bottom: 1rpx solid #f1f5f9;
  font-size: 32rpx;
  color: #1e293b;
  font-weight: 600;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: #64748b;
  font-size: 28rpx;
  font-weight: 500;
}

.info-value {
  color: #3B82F6;
  font-weight: 600;
  font-size: 28rpx;
}

/* 操作按钮 */
.action-buttons {
  margin-top: 48rpx;
}

.button {
  height: 96rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  margin-bottom: 24rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-size: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 1rpx solid;
}

.button-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.secondary {
  color: #3B82F6;
  border-color: rgba(59, 130, 246, 0.2);
  background: rgba(59, 130, 246, 0.05);
}

.secondary:active {
  background: rgba(59, 130, 246, 0.1);
}

.danger {
  color: #EF4444;
  border-color: rgba(239, 68, 68, 0.2);
  background: rgba(239, 68, 68, 0.05);
}

.danger:active {
  background: rgba(239, 68, 68, 0.1);
}

/* 交互效果 */
.hover-scale:active {
  transform: scale(0.98);
  opacity: 0.9;
}