/* pages/edit-task/edit-task.wxss */
.container {
  background: #F8FAFC;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 160rpx; /* 新增底部间距 */
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  padding: 0 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 48rpx;
  background: rgba(30, 41, 59, 0.05);
  transition: all 0.3s;
}

.action-btn.danger {
  background: rgba(239, 68, 68, 0.1);
}

.action-btn text {
  font-size: 28rpx;
  margin: 0 12rpx;
}

.icon {
  width: 36rpx;
  height: 36rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E293B;
}

.status-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 41, 59, 0.08);
}

.status-card.done {
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
  border-left: 8rpx solid #10B981;
}

.status-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.status-text {
  font-size: 28rpx;
  color: #64748B;
}

.status-badge {
  font-size: 28rpx;
  font-weight: 500;
  color: #10B981;
  padding: 8rpx 24rpx;
  background: rgba(16, 185, 129, 0.1);
  border-radius: 32rpx;
}

.toggle-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(59, 130, 246, 0.1);
  color: #3B82F6;
  border-radius: 16rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.form-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 41, 59, 0.08);
}

.form-item {
  margin-bottom: 48rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #1E293B;
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-left: 24rpx;
  position: relative;
}

.label::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #3B82F6;
  border-radius: 4rpx;
}

.input, .textarea {
  width: 100%;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #1E293B;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input.has-value, 
.textarea.has-value {
  background: #E6F4FF;
  border-color: #3B82F6;
}

.counter {
  font-size: 24rpx;
  color: #94A3B8;
  text-align: right;
  margin-top: 16rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.category-item {
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.8;
  transition: all 0.3s;
  position: relative;
}

.category-item.active {
  opacity: 1;
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.15);
  border: 2rpx solid rgba(255,255,255,0.3);
}

.category-item.active::after {
  content: '✓';
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #3B82F6;
}

.time-group {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.time-item {
  height: 96rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.time-item.selected {
  background: #E6F4FF;
  border: 2rpx solid #3B82F6;
}

.time-item image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.footer {
  position: relative;
  padding: 32rpx 0;
  margin-top: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: #E2E8F0;
  border-radius: 16rpx;
  color: #94A3B8;
  font-size: 32rpx;
  transition: all 0.3s;
}

.submit-btn.active {
  background: #3B82F6;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.submit-btn.disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 弹窗样式优化 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-container {
  background: white;
  width: 600rpx;
  border-radius: 24rpx;
  padding: 48rpx;
  text-align: center;
  animation: modalShow 0.3s ease;
}

@keyframes modalShow {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 24rpx;
}

.modal-content {
  font-size: 28rpx;
  color: #64748B;
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.modal-actions {
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.modal-btn.cancel {
  background: #F1F5F9;
  color: #64748B;
}

.modal-btn.cancel:active {
  background: #E2E8F0;
}

.modal-btn.confirm {
  background: #EF4444;
  color: white;
}

.modal-btn.confirm:active {
  background: #DC2626;
}

/* 加载状态样式 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.95);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-icon {
  width: 120rpx;
  height: 120rpx;
}

.loading-text {
  margin-top: 20rpx;
  color: #64748b;
  font-size: 28rpx;
}