/* pages/index/index.wxss */
.container {
  background: #F8FAFC;
  min-height: 100vh;
  padding: 32rpx;
}

/* 头部样式 */
.header {
  margin-bottom: 48rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.welcome {
  font-size: 36rpx;
  font-weight: 600;
  color: #1E293B;
}

.logout {
  font-size: 28rpx;
  color: #3B82F6;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  background: rgba(59, 130, 246, 0.1);
}

.search-box {
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(30, 41, 59, 0.05);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 30rpx;
  color: #1E293B;
}

/* 数据统计 */
.stats-panel {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.stats-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(30, 41, 59, 0.05);
}

.stats-value {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #3B82F6;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #64748B;
}

.accent-blue .stats-value {
  color: #3B82F6;
}

.accent-red .stats-value {
  color: #EF4444;
}

/* 导航标签 */
.tab-bar {
  display: flex;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(30, 41, 59, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: #64748B;
  transition: all 0.3s;
}

.tab-item.active {
  color: #3B82F6;
  font-weight: 500;
  background: rgba(59, 130, 246, 0.1);
}

/* 任务列表 */
.task-list {
  height: calc(100vh - 580rpx);
  position: relative;
}

@keyframes taskEntrance {
  from {
    opacity: 0;
    transform: translateX(60rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.task-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(30, 41, 59, 0.05);
  animation: taskEntrance 0.6s cubic-bezier(0.23, 1, 0.32, 1) forwards;
  opacity: 0;
  will-change: transform, opacity;
}

.task-card:nth-child(1) { animation-delay: 0.1s; }
.task-card:nth-child(2) { animation-delay: 0.15s; }
.task-card:nth-child(3) { animation-delay: 0.2s; }
.task-card:nth-child(4) { animation-delay: 0.25s; }
.task-card:nth-child(5) { animation-delay: 0.3s; }
.task-card:nth-child(n+6) { animation-delay: 0.35s; }

.task-card.done {
  opacity: 0.6;
}

.status-ribbon {
  position: absolute;
  right: -36rpx;
  top: 16rpx;
  width: 120rpx;
  padding: 8rpx;
  background: #3B82F6;
  color: white;
  text-align: center;
  transform: rotate(45deg);
  font-size: 24rpx;
}

.status-ribbon.done {
  background: #10B981;
}

.status-ribbon.overdue {
  background: #EF4444;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 16rpx;
}

.task-desc {
  display: block;
  font-size: 26rpx;
  color: #64748B;
  margin-bottom: 24rpx;
}

.task-meta {
  display: flex;
  gap: 32rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #64748B;
}

.quick-action {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(59, 130, 246, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 96rpx 0;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #94A3B8;
}

/* 悬浮按钮 */
.fab-container {
  position: fixed;
  right: 32rpx;
  bottom: 64rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  z-index: 999;
}

.fab-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  background: #3B82F6;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s;
}

.fab-btn.chart {
  background: #10B981;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.fab-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.fab-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.fab-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
}

.loading-content {
  text-align: center;
}

.loading-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #64748B;
}