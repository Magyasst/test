/* pages/stats/stats.wxss */
.container {
  padding: 32rpx 24rpx;
  background: linear-gradient(160deg, #f8fafc 0%, #f1f5f9 100%);
  min-height: 100vh;
}

/* Â§¥ÈÉ®Âå∫Âüü‰ºòÂåñ */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  padding: 0 16rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1a1a1a;
  position: relative;
  padding-left: 48rpx;
}

.title::before {
  content: 'üìä';
  position: absolute;
  left: 0;
  top: -2rpx;
  font-size: 38rpx;
}

.time-filter {
  background: rgba(99,102,241,0.08);
  border-radius: 48rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #6366f1;
  border: 1rpx solid rgba(99,102,241,0.15);
  transition: all 0.3s ease;
}

.time-filter:active {
  background: rgba(99,102,241,0.12);
}

.filter-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 16rpx;
  opacity: 0.8;
}

/* Ê¶ÇËßàÂç°Áâá‰ºòÂåñ */
.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.overview-card {
  padding: 40rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(8rpx);
  border: 1rpx solid rgba(255,255,255,0.6);
  box-shadow: 
    0 12rpx 32rpx rgba(99,102,241,0.06),
    0 4rpx 6rpx rgba(99,102,241,0.02);
}

.overview-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    rgba(255,255,255,0.15) 25%,
    transparent 50%,
    rgba(255,255,255,0.15) 75%
  );
  transform: rotate(45deg);
  opacity: 0.1;
}

.blue-gradient {
  background: linear-gradient(135deg, #6366f1 0%, #3b82f6 100%);
}

.green-gradient {
  background: linear-gradient(135deg, #10b981 0%, #3b82f6 100%);
}

.card-icon {
  width: 72rpx;
  height: 72rpx;
  margin-right: 32rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.1));
}

.value {
  font-size: 52rpx;
  font-weight: 800;
  color: rgba(255,255,255,0.95);
  line-height: 1.2;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.label {
  font-size: 26rpx;
  color: rgba(255,255,255,0.85);
  letter-spacing: 0.5rpx;
}

/* ÂõæË°®Âç°Áâá‰ºòÂåñ */
.chart-card {
  background: rgba(255,255,255,0.95);
  border-radius: 24rpx;
  box-shadow: 
    0 12rpx 32rpx rgba(99,102,241,0.06),
    0 4rpx 6rpx rgba(99,102,241,0.02);
  margin: 48rpx 0;
  padding: 32rpx 0;
  border: 1rpx solid rgba(241,245,249,0.6);
  backdrop-filter: blur(8rpx);
}

.card-header {
  padding: 0 32rpx 24rpx;
  position: relative;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(226,232,240,0.4);
}

.header-decoration {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 48rpx;
  width: 8rpx;
  background: linear-gradient(to bottom, #6366f1, #3b82f6);
  border-radius: 4rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: 700;
  margin-left: 32rpx;
  color: #1e293b;
  display: flex;
  align-items: center;
}

.update-time {
  font-size: 24rpx;
  color: #64748b;
  margin-left: 24rpx;
  font-weight: 400;
}

.chart-container {
  width: 100%;
  height: 560rpx;
  padding: 0 24rpx;
}

/* Âä†ËΩΩÁä∂ÊÄÅ‰ºòÂåñ */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.98);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
  backdrop-filter: blur(20rpx);
}

.loading-gif {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(99,102,241,0.1));
}

.loading-text {
  font-size: 30rpx;
  color: #64748b;
  letter-spacing: 1rpx;
  font-weight: 500;
}

/* Êñ∞Â¢ûÂä®ÁîªÊïàÊûú */
@keyframes cardEntrance {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.overview-card {
  animation: cardEntrance 0.6s cubic-bezier(0.23, 1, 0.32, 1) forwards;
  opacity: 0;
}

.chart-card {
  animation: cardEntrance 0.6s 0.2s cubic-bezier(0.23, 1, 0.32, 1) forwards;
  opacity: 0;
}