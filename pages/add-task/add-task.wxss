/* 极致优化版 - 增加设计细节 */
.container {
  padding: 32rpx;
  background: linear-gradient(160deg, #f8fafc 0%, #f1f5f9 100%);
  min-height: 100vh;
}

.header {
  padding: 64rpx 0 72rpx;
  position: relative;
}

.title {
  font-size: 44rpx;
  font-weight: 800;
  color: #0f172a;
  letter-spacing: -0.5rpx;
  position: relative;
  display: inline-block;
  padding: 0 32rpx 16rpx;
  background: linear-gradient(120deg, #6366f1 30%, #3b82f6 70%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: linear-gradient(90deg, rgba(99,102,241,0.2) 0%, #6366f1 50%, rgba(99,102,241,0.2) 100%);
  border-radius: 2rpx;
}

.form-container {
  background: rgba(255,255,255,0.95);
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 
    0 12rpx 32rpx rgba(99, 102, 241, 0.06),
    0 4rpx 6rpx rgba(99, 102, 241, 0.02);
  backdrop-filter: blur(12rpx);
  border: 2rpx solid rgba(255,255,255,0.8);
  transition: transform 0.3s cubic-bezier(0.23, 1, 0.32, 1);
}

.form-container:active {
  transform: translateY(2rpx);
  box-shadow: 
    0 8rpx 24rpx rgba(99, 102, 241, 0.04),
    0 2rpx 4rpx rgba(99, 102, 241, 0.02);
}

.error-tip {
  background: rgba(254,226,226,0.95);
  padding: 28rpx;
  margin-bottom: 40rpx;
  border-radius: 16rpx;
  color: #dc2626;
  display: flex;
  align-items: center;
  border-left: 8rpx solid #ef4444;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-6rpx); }
}

.error-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(220,38,38,0.1));
}

.form-item {
  margin-bottom: 56rpx;
  position: relative;
}

.label {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
  color: #334155;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 0.2rpx;
}

.label::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #6366f1;
  border-radius: 50%;
  margin-right: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(99,102,241,0.2);
}

.input, .textarea {
  width: 100%;
  padding: 28rpx 0;
  border: 0;
  border-bottom: 2rpx solid #e2e8f0;
  border-radius: 0;
  font-size: 32rpx;
  color: #1e293b;
  background: transparent;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
}

.input::placeholder, 
.textarea::placeholder {
  color: #94a3b8;
  opacity: 0.8;
}

.input:focus, 
.textarea:focus {
  border-bottom-color: #6366f1;
  background: rgba(99,102,241,0.03);
  padding-left: 20rpx;
  box-shadow: 
    inset 8rpx 0 0 rgba(99,102,241,0.1),
    0 6rpx 20rpx rgba(99,102,241,0.05);
}

.textarea {
  min-height: 260rpx;
  line-height: 1.7;
  padding-top: 32rpx;
}

.counter {
  position: absolute;
  right: 0;
  bottom: -44rpx;
  color: #94a3b8;
  font-size: 26rpx;
  font-feature-settings: "tnum";
  transition: all 0.3s ease;
  opacity: 0.8;
}

.form-item:focus-within .counter {
  color: #6366f1;
  opacity: 1;
  text-shadow: 0 2rpx 4rpx rgba(99,102,241,0.1);
}

.category-group {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.category-item {
  padding: 20rpx 40rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 48rpx;
  font-size: 28rpx;
  color: #475569;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  position: relative;
  overflow: hidden;
}

.category-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(99,102,241,0) 0%, rgba(99,102,241,0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.category-item.active {
  background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%);
  color: white;
  border-color: transparent;
  box-shadow: 
    0 12rpx 24rpx rgba(99,102,241,0.15),
    inset 0 2rpx 4rpx rgba(255,255,255,0.2);
}

.category-item.active::after {
  content: '✓';
  position: absolute;
  right: -8rpx;
  top: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #4f46e5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(79,70,229,0.3);
}

.picker-box {
  padding: 28rpx 32rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  color: #64748b;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  background: rgba(241,245,249,0.6);
  position: relative;
}

.picker-box.selected {
  border-color: rgba(99,102,241,0.3);
  background: rgba(99,102,241,0.06);
  color: #4f46e5;
  padding-left: 56rpx;
}

.picker-box::before {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.picker-box.selected::before {
  opacity: 1;
}

.picker-box::after {
  content: '›';
  margin-left: auto;
  font-size: 40rpx;
  color: #94a3b8;
  transform: rotate(0deg);
  transition: transform 0.3s ease;
}

.picker-box.selected::after {
  color: #6366f1;
  transform: rotate(90deg);
}

.submit-btn {
  width: 100%;
  height: 112rpx;
  background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%);
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 16rpx;
  margin-top: 56rpx;
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  box-shadow: 
    0 12rpx 32rpx rgba(99,102,241,0.25),
    inset 0 2rpx 4rpx rgba(255,255,255,0.2);
  position: relative;
  overflow: hidden;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 200%;
  height: 100%;
  background: linear-gradient(
    90deg,
    rgba(255,255,255,0) 25%,
    rgba(255,255,255,0.2) 50%,
    rgba(255,255,255,0) 75%
  );
  animation: shine 2s infinite;
}

@keyframes shine {
  0% { left: -100%; }
  100% { left: 100%; }
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 
    0 6rpx 16rpx rgba(99,102,241,0.3),
    inset 0 2rpx 4rpx rgba(0,0,0,0.05);
}

/* 新增细节样式 */
.form-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: linear-gradient(90deg, #6366f1 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.form-item:focus-within::after {
  opacity: 0.2;
}